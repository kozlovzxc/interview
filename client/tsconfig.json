{
  "indentSize": 2,
  "tabSize": 2,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
        "~": ["node_modules"],
        "@": ["src"]
    },
    "lib": ["dom", "es5", "es2015"],
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true
  },
  "exclude": [
		"scripts/templates"
	]
}